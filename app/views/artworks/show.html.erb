<h1><%= @artwork.title %></h1>
<p><%= @artwork.description %></p>
<p>Prix : <%= number_to_currency(@artwork.price) %></p>
<% if @artwork.image.attached? %>
  <%= image_tag @artwork.image, class: "img-fluid" %>
<% end %>
<% if user_signed_in? && @artwork.user == current_user %>
  <%= link_to 'Modifier', edit_artwork_path(@artwork), class: "btn btn-warning" %>
  <%= link_to 'Supprimer', artwork_path(@artwork), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "btn btn-danger" %>
<% end %>
