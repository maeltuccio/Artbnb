<!-- Grille des Å“uvres -->
<div class="grid">
  <% @artworks.each do |artwork| %>
    <!-- Rendre toute la carte cliquable -->
      <%= link_to(artwork_path(artwork), class: "card-link") do %>
      <div class="card">

      <% if artwork.image.attached? %>
        <!-- Image via Active Storage ou Cloudinary -->
        <%= cl_image_tag(artwork.image.key, width: 300, height: 200, crop: :fill, class: "card-image", alt: "Image de #{artwork.title}") %>
      <% else %>
        <div class="card-image-placeholder">Aucune image disponible</div>
      <% end %>
      <div class="card-content">
        <h3 class="card-title"><%= artwork.title %></h3>
        <p class="card-description"><%= truncate(artwork.description, length: 100) %></p>
        <p class="card-price"><%= number_to_currency(artwork.price) %></p>
        <div class="card-actions">
        </div>
      </div>

     </div>
     <% end %>
  <% end %>
</div>
